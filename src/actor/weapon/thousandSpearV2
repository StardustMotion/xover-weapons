	stab:
		"----" A 0 A_SpawnItemEx("Thousand Spear Stab V2", args[1], args[0], args[2], args[3], 0, args[4], 0, 
			SXF_TRANSFERPITCH | SXF_TRANSFERTRANSLATION) stop}}
			
		