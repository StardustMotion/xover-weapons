			"----" A 0 A_Refire(1) goto finalThrust
			"----" A 1 offset(34,100)
			"----" A 0 A_Refire(1) goto finalThrust
			"----" A 1 offset(48,128)
			"----" A 0 A_Refire("ammoTollNoFlash")
			goto finalThrust
			
		altRelease:
