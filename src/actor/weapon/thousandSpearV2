			"----" A 0 A_Recoil(-3)
			"----" A 0 A_PlaySoundEx("THSNSPR1","Weapon")			
			"----" A 0 A_SetArg(0,random(-1,1))			
			"----" A 0 A_GiveInventory("Thousand Spear Stab Setup")
	
